<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".Attendance_activity">



    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="10dp">


        <RelativeLayout
            android:id="@+id/present_layout"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/present_cardview_bg"
            android:padding="0dp"
            android:fitsSystemWindows="true">


            <TextView
                android:id="@+id/present_student_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="48dp"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/exoregular"
                android:gravity="center"
                android:padding="5dp"
                android:text="Present" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/absent_layout"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:padding="0dp"
            android:background="@drawable/absent_cardview_bg"
            >


            <TextView
                android:id="@+id/absent_student_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="48dp"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/exoregular"
                android:gravity="center"
                android:padding="5dp"
                android:text="Absent" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/late_layout"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:padding="0dp"
            android:background="@drawable/late_cardview_bg"
            >



            <TextView
                android:id="@+id/late_student_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="48dp"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="40dp"
                android:fontFamily="@font/exoregular"
                android:gravity="center"
                android:padding="5dp"
                android:text="Late" />
        </RelativeLayout>
    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout1">


        <!--            tools:listitem="@layout/student_item"-->


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/students_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-250dp"
            android:fontFamily="@font/exoregular"
            android:text="Haven't added students yet?"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-200dp"
            android:fontFamily="@font/exoregular"
            android:text="Students you add for taking attendance will appear here."
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            android:textStyle="normal" />


        <Button
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="logout"
            android:visibility="invisible"
            />

        <Button
            android:id="@+id/done_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Done"
            android:fontFamily="@font/exoregular"
            android:background="#8CBEB5"
            android:textColor="@android:color/white"/>

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/main_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:layout_anchorGravity="center_vertical|right"
            app:fab_addButtonColorNormal="#3c1414"
            app:fab_addButtonColorPressed="#3c1414"

            app:fab_addButtonPlusIconColor="#ffffff"
            app:fab_expandDirection="up"
            app:fab_labelStyle="@style/menu_labels_style"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp">
            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_student_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_icon="@drawable/ic_group_add_black_24dp"
                app:fab_colorNormal="#3c1414"
                app:fab_title="Add student"
                app:fab_size="mini"
                app:fab_colorPressed="#3c1414"
                />
            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/take_attendance_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_icon="@drawable/ic_person_outline_black_24dp"
                app:fab_colorNormal="#3c1414"
                app:fab_title="Take attendance"
                app:fab_size="mini"
                app:fab_colorPressed="#3c1414"
                />
        </com.getbase.floatingactionbutton.FloatingActionsMenu>

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/add_new_student_fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:layout_anchorGravity="center_vertical|right"
            app:fab_addButtonColorNormal="#3c1414"
            app:fab_addButtonColorPressed="#3c1414"

            app:fab_addButtonPlusIconColor="#ffffff"
            app:fab_expandDirection="up"
            app:fab_labelStyle="@style/menu_labels_style"

            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="50dp"
            >
            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_student_manually_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_icon="@drawable/ic_group_add_black_24dp"
                app:fab_colorNormal="#3c1414"
                app:fab_title="Add student manually"
                app:fab_size="mini"
                app:fab_colorPressed="#3c1414"
                />
            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/import_from_excel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_icon="@drawable/ic_baseline_file_copy_24"
                app:fab_colorNormal="#3c1414"
                app:fab_title="Import from excel sheets"
                app:fab_size="mini"
                app:fab_colorPressed="#3c1414"
                />
        </com.getbase.floatingactionbutton.FloatingActionsMenu>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>


